#! /bin/tcsh -v

if ($#argv < 1) then
  echo 'USAGE : genSupportRelease LABEL [CVSTAG]'
  echo where 
  echo '   LABEL is the label for the release'
  echo '   CVSTAG is an optional CVS tag to checkout, the default is the head'
endif

set LABEL = $1
set CVSTAG = HEAD
if ($#argv >  1) then
  set CVSTAG = $2
endif

set CHECKOUTPATH = ./OFXRELEASE

echo Checking out to $CHECKOUTPATH, release is $LABEL, cvs tag is $CVSTAG.

if (-d $CHECKOUTPATH) then
    rm -rf $CHECKOUTPATH
endif

mkdir $CHECKOUTPATH

pushd  $CHECKOUTPATH

cvs  -z3 -d:pserver:anonymous@openfx.cvs.sourceforge.net:/cvsroot/openfx checkout -r $CVSTAG Support

find . -name CVS -depth -exec rm -rf {} \;

cd Support

doxygen support.doxy

mv doc/html ../doc

cd ..

tar cvf - doc | gzip > openfxSupport-doc-$LABEL.tar.gz 
tar cvf - Support | gzip > openfxSupport-src-$LABEL.tar.gz 

set CURRENTDIR = `pwd`
ftp -n upload.sourceforge.net << wibble
quote USER anonymous
quote PASS brunonicoletti@users.sourceforge.net
binary
passive
lcd $CURRENTDIR
cd incoming
put openfxSupport-doc-$LABEL.tar.gz 
put openfxSupport-src-$LABEL.tar.gz 
quit
wibble

popd

rm -rf $CHECKOUTPATH

echo YOU NOW NEED TO ADD THE RELEASE VIA THE SF WEB INTERFACE
